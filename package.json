{
  "name": "vigenere",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "npx serve@latest out",
    "lint": "next lint",
    "format": "prettier --write 'src' 'tests'",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "playwright test tests/e2e",
    "test:unit": "tsc && vitest run tests/unit"
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {}
    }
  },
  "dependencies": {
    "comlink": "4.4.1",
    "next": "14.0.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.5"
  },
  "devDependencies": {
    "@playwright/test": "1.39.0",
    "@types/node": "20.9.0",
    "@types/react": "18.2.37",
    "eslint": "8.53.0",
    "eslint-config-next": "14.0.2",
    "prettier": "3.1.0",
    "prettier-plugin-tailwindcss": "0.5.7",
    "typescript": "5.2.2",
    "vitest": "0.34.6"
  }
}
