  },
  "devDependencies": {
    "@playwright/test": "^1.24.0",
    "@types/node": "18.6.1",
    "@types/react": "18.0.15",
    "eslint": "8.20.0",
    "eslint-config-next": "12.2.3",
    "typescript": "4.7.4",
