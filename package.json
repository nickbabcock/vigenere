{
  "name": "vigenere",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "npx serve@latest out",
    "lint": "next lint",
    "format": "prettier --write 'src' 'tests'",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "playwright test tests/e2e",
    "test:unit": "tsc && vitest run tests/unit"
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {}
    }
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "dependencies": {
    "comlink": "4.4.1",
    "next": "14.2.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwindcss": "3.4.3",
    "zustand": "4.5.5"
  },
  "devDependencies": {
    "@playwright/test": "1.44.1",
    "@types/node": "20.12.12",
    "@types/react": "18.3.3",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.3",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.14",
    "typescript": "5.4.5",
    "vitest": "1.6.0"
  }
}
