  "devDependencies": {
    "@playwright/test": "1.30.0",
    "@types/node": "18.11.19",
    "@types/react": "18.0.27",
    "eslint": "8.33.0",
    "eslint-config-next": "13.1.6",
    "prettier": "2.8.3",
    "prettier-plugin-tailwindcss": "0.2.2",
