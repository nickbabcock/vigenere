{
  "name": "vigenere",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "npx serve@latest out -l 3335",
    "lint": "next lint",
    "format": "prettier --write 'src' 'tests'",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "playwright test tests/e2e",
    "test:unit": "tsc && vitest run tests/unit"
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {}
    }
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "dependencies": {
    "comlink": "4.4.1",
    "next": "14.2.8",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwindcss": "3.4.10",
    "zustand": "4.5.5"
  },
  "devDependencies": {
    "@playwright/test": "1.47.0",
    "@types/node": "22.5.4",
    "@types/react": "18.3.5",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.8",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.6",
    "typescript": "5.5.4",
    "vitest": "2.0.5"
  }
}
