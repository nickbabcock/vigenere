{
  "name": "vigenere",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "npx serve@latest out -l 3335",
    "lint": "next lint",
    "format": "prettier --write 'src' 'tests'",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "playwright test tests/e2e",
    "test:unit": "tsc && vitest run tests/unit"
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals"
  },
  "postcss": {
    "plugins": {
      "@tailwindcss/postcss": {}
    }
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "dependencies": {
    "@tailwindcss/postcss": "4.1.10",
    "comlink": "4.4.2",
    "next": "15.5.7",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwindcss": "4.1.10",
    "zustand": "5.0.5"
  },
  "devDependencies": {
    "@playwright/test": "1.52.0",
    "@types/node": "22.15.21",
    "@types/react": "19.1.5",
    "eslint": "9.27.0",
    "eslint-config-next": "15.5.7",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "0.6.12",
    "typescript": "5.8.3",
    "vitest": "3.1.4"
  }
}
